# PWA Configuration
# Copy this file to .env and fill in your values

# VAPID Keys for Push Notifications (optional)
# Generate these using: https://web-push-codelab.glitch.me/
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VITE_VAPID_PRIVATE_KEY=your_vapid_private_key_here

# PWA App Information
VITE_PWA_NAME=Streamr
VITE_PWA_SHORT_NAME=Streamr
VITE_PWA_DESCRIPTION=Your Ultimate Streaming Platform

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_TMDB_API_KEY=your_tmdb_api_key_here

# Feature Flags
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_BACKGROUND_SYNC=true
VITE_ENABLE_PERIODIC_SYNC=true

# Development Settings
VITE_DEV_MODE=false
VITE_ENABLE_DEBUG_LOGGING=false 